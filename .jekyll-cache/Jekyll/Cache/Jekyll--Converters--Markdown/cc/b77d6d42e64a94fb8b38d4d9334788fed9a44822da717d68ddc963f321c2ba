				<span class="n">legs</span><span class="o">=</span><span class="mi">4</span><span class="p">;</span>
			<span class="k">else</span> <span class="k">if</span><span class="p">(</span><span class="n">type</span><span class="p">.</span><span class="n">compare</span><span class="p">(</span><span class="s">"monkey"</span><span class="p">)</span><span class="o">==</span><span class="mi">0</span><span class="p">)</span>
				<span class="n">legs</span><span class="o">=</span><span class="mi">2</span><span class="p">;</span>
			<span class="k">else</span>	
